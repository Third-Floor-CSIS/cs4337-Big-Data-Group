<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

<!--    We will have a parent directory -->
    <include file="com/example/news/news.changelog.sql"/>
    <include file="com/example/directory/directory.changelog.sql"/>

<!--    Sample change set -->
    <changeSet id="0" author="Sean" context="Creating tables">

        <createTable tableName="posts">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_USERS" nullable="false"/>
            </column>
            <column name="likesCount" type="VARCHAR2(255)"/>
            <column name="content" type="VARCHAR2(255)"/>
            <column name="userID" type="VARCHAR2(255)">
                <constraints unique="true"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
